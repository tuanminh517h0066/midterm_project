<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Home</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="stylesheets/style.css">
</head>

<body>
  <div class="header">
    <div class="row" style="margin: 0;">
      <div class="col-md-6">
        <h3 class="text-light" style="font-family: Comic Sans MS; padding-left:20px"><strong>MTB</strong> Online chat</h3>
      </div>
      <div class="col-md-6">
        <a class="active" id="btn_logout" href="/logout">
          <i class="fas fa-sign-out-alt"></i> Logout
        </a>
        <span id="hello">Hello, <strong>{{user.name}}</strong></span>
        
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <div class="row justify-content-center">
          <div class="col-md-12">
            <div class="rounded border mt-3 mb-3">
              
              <div class="inbox">
                <div class="inbox__people">
                </div>
              </div>
            </div>
          </div>
        </div>
        <div id="notify"></div>
      </div>
      <div class="col-md-8">
        <div class="row justify-content-center chat-form" hidden>
          <div class="col-md-12">
            <div class="rounded border mt-3 mb-3">
              <div class="user" style="background-color: white">
                <div class="avatar"></div>
                <div class="user-info">
                  <div class="user-name-chat" style="font-size: 17px; color: black; font-weight:bold"></div>
                  <div class="online">Recent access</div>
                </div>
                <div class="actions" >
                  </a><i class="far fa-window-close" ></i>
                </div>
              </div>
              <div class="conversation">
                <div class="inbox">
                  <div class="inbox__messages">
                    
                  </div>
                </div>
              </div>
              
              <form class="message_form">
                <div class="fallback"></div>
                <input type="hidden" name="receiver_id" id="receiver_id">
                <input type="text" class="message_form__input" placeholder="Type your message..." />
                <button class="btn btn-primary message_form__button" type="submit">
                  <i class="fas fa-paper-plane"></i>
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.1.1/socket.io.js"></script>
  <script src="main.js"></script>
  {{#with user}}
  <script>
    newUserConnected({name:'{{{ name }}}', id:'{{  id }}', avatar:'{{ avatar }}'});
  </script>
  {{/with}}

</body>


</html>